@Service
public class CategoryService {
    
    public List<category> getAllCategories() {
        List<category> categories = new ArrayList<>();
        // Add sample categories
        categories.add(new category(1, "Black Tea", "Rich and full-bodied black teas"));
        categories.add(new category(2, "Green Tea", "Light and refreshing green teas"));
        categories.add(new category(3, "Herbal Tea", "Caffeine-free herbal infusions"));
        return categories;
